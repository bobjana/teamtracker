<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="za.co.zynafin.teamtracker">

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="16" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_SYNC_STATS" />
    <uses-permission android:name="android.permission.WRITE_SYNC_SETTINGS" />
    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.MANAGE_ACCOUNTS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />
    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".account.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- android:name=".DashboardActivity" -->


        <!--<service android:name=".account.AccountService">-->
            <!--<intent-filter>-->
                <!--<action android:name="android.accounts.AccountAuthenticator" />-->
            <!--</intent-filter>-->
            <!--<meta-data-->
                <!--android:name="android.accounts.AccountAuthenticator"-->
                <!--android:resource="@xml/authenticator"></meta-data>-->
        <!--</service>-->


        <service
            android:name=".sync.SyncService"
            android:enabled="true"
            android:exported="true"
            android:process=":syncteamtracker">
            <intent-filter>
                <action android:name="android.content.SyncAdapter" />
            </intent-filter>
            <meta-data
                android:name="android.content.SyncAdapter"
                android:resource="@xml/syncadapter" />
        </service>

        <service
            android:name=".events.GeoFenceTransitionIntentService"
            android:exported="false">
        </service>

        <receiver android:name=".events.GeoFenceReceiver"
        android:exported="false">
        <intent-filter >
        <!--<action android:name="za.co.zynafin.teamtracker.events.GeoFenceReceiver"/>-->

        <action android:name="za.co.zynafin.teamtracker.ACTION_GEOFENCE_TRANSITION"/>
        </intent-filter>
        </receiver>


        <receiver android:name="za.co.zynafin.teamtracker.sync.BootBroadcastReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
            </intent-filter>
        </receiver>

        <provider
            android:name=".sync.DataProvider"
            android:authorities="za.co.zynafin.teamtracker"
            android:exported="false" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
    </application>


</manifest>
